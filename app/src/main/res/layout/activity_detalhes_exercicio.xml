<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_launcher_foreground"
        app:tint="@color/text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNomeDetalhe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Supino Reto"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnVoltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVoltar"
        app:layout_constraintTop_toTopOf="@+id/btnVoltar" />

    <TextView
        android:id="@+id/tvGrupoDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="PEITO"
        android:textColor="@color/pink_accent"
        android:textSize="14sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvNomeDetalhe"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeDetalhe" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGrafico"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/surface_dark"
        app:cardCornerRadius="16dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvGrupoDetalhe">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"/>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnRegistrarTreino"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Registrar Nova Carga"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/pink_accent"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/cardGrafico" />

</androidx.constraintlayout.widget.ConstraintLayout>